.user-nav {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 3rem;
}
.user-nav__search {
  display: flex;
  align-items: center;
}
.user-nav__query {
  font: inherit;
  font-size: 1.6rem;
  margin-left: 1rem;
  outline: none;
  border: none;
  color: var(--color-grey-dark-1);
}
.user-nav__query::placeholder {
  color: var(--color-primary-light-1);
}
.user-nav__user {
  display: flex;
  align-items: center;
  border-radius: 1.5rem;
  border: 1px solid var(--color-white);
}
.user-nav__icon {
  display: flex;
  align-items: center;
  padding: 0.5rem 1.5rem;
}
.user-nav__icon svg {
  width: 2.5rem;
  height: 2.5rem;
  fill: var(--color-primary-light-1);
}
.user-nav__icon--search {
  background-color: var(--color-white);
  padding: 0.75rem;
  border-radius: 1.5rem;
}
.user-nav__icon--search svg {
  fill: var(--color-primary);
}
.user-nav__icon--search:hover svg {
  fill: var(--color-primary-dark);
}
.user-nav__icon--notification {
  border-right: 1px solid var(--color-white);
}
.user-nav__icon--notification:hover svg {
  fill: var(--color-primary-light-2);
}
.user-nav__icon:hover {
  cursor: pointer;
}
.user-nav__account {
  display: flex;
  align-items: center;
  padding: 0.5rem 1.5rem;
}
.user-nav__profile-pic {
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 50%;
  object-fit: cover;
  object-position: top;
  margin-right: 1rem;
}
.user-nav__username {
  font-size: 1.4rem;
  font-weight: 600;
  font-family: var(--font-display);
  color: var(--color-primary);
}