.weather-graph {
  width: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.weather-graph .graph {
  border-radius: 1.5rem;
  background-color: var(--color-white);
  margin-top: 3rem;
  flex-grow: 1;
  padding: 2rem;
}
.weather-graph .graph__menu {
  display: flex;
  justify-content: space-between;
  font-size: 1.4rem;
  color: var(--color-grey-dark-1);
  margin-bottom: 1rem;
}
.weather-graph .graph__days {
  display: flex;
  padding: 0.5rem 2rem;
}
.weather-graph .graph__days > * {
  margin-right: 1.5rem;
}
.weather-graph .graph__days > *:not(:last-child) {
  padding-right: 1rem;
  border-right: 1.25px solid var(--color-grey-dark-1);
}
.weather-graph .graph__temp {
  font: inherit;
  outline: none;
  border: none;
  color: inherit;
  padding: 0 1rem;
}
.weather-graph .graph__temp:hover {
  cursor: pointer;
}
.weather-graph .graph__day:hover {
  cursor: pointer;
  color: var(--color-primary-dark);
}
.weather-graph .graph__day--active {
  color: var(--color-primary);
}
.weather-graph .graph__day--active:hover {
  color: var(--color-primary);
}
.weather-graph .graph__chart-box {
  height: 30rem;
  width: 100%;
}