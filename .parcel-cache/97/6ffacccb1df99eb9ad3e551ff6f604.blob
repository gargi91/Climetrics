.btn {
  font: inherit;
  border: none;
  padding: 0.5rem 0;
  background-color: transparent;
  color: var(--color-primary);
  font-size: 1.4rem;
  font-weight: 500;
}
.btn:hover {
  cursor: pointer;
  color: var(--color-primary-dark);
}

.btn--light {
  background-color: var(--color-white);
}

.btn--dark {
  background-color: var(--color-primary);
}
.btn--dark svg {
  width: 1rem;
  height: 1rem;
  fill: var(--color-white);
}

.btn--right,
.btn--left {
  position: absolute;
  padding: 1rem;
  border-radius: 1rem;
  z-index: 1;
  transform: translateY(-50%);
  top: 50%;
}

.btn--left {
  left: 0;
}

.btn--right {
  right: 0;
}

.hidden {
  opacity: 0;
  display: none;
}

.blur-bg {
  opacity: 0.5;
}