h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-display);
  color: var(--color-grey-darkest);
  text-transform: capitalize;
}

.heading--1 {
  font-size: 2.8rem;
  font-weight: 600;
}

.heading--2 {
  font-size: 2.4rem;
  font-weight: 600;
}

.heading--3 {
  font-size: 2rem;
  font-weight: 600;
}